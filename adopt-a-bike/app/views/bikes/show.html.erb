<p id="notice"><%= notice %></p>

<p>
  <strong>Internal ID:</strong>
  <%= @bike.id %>
</p>

<p>
  <strong>Friendly Name:</strong>
  <%= @bike.name %>
</p>

<p>
  <strong>TfL Number:</strong>
  <%= @bike.number %>
</p>

<%= link_to 'Edit', edit_bike_path(@bike) %> |
<%= link_to 'Back', bikes_path %>

<h2>Sightings for Bike#<%= @bike.number %></h2>

<table id="bike-sightings-table" class="table table-condensed table-striped">
  <thead>
    <tr>
      <th>Lat</th>
      <th>Long</th>
      <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bike.sightings.each do |sighting| %>
      <tr>
        <td><%= sighting.lat %></td>
        <td><%= sighting.long %></td>
        <td><%= sighting.time %></td>
        <td><%= link_to 'Show', sighting %></td>
      </tr>
    <% end %>
  </tbody>
</table>