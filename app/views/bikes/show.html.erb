<p id="notice"><%= notice %></p>

<p>
  <strong>Internal ID:</strong>
  <%= @bike.id %>
</p>

<p>
  <strong>Friendly Name:</strong>
  <%= @bike.name %>
</p>

<p>
  <strong>TfL Number:</strong>
  <%= @bike.number %>
</p>

<%= link_to 'Edit', edit_bike_path(@bike) %> |
<%= link_to 'Back', bikes_path %>

<h2>Sightings for Bike #<%= @bike.number %></h2>

<% if @bike.sightings.size() > 0 %>

<table id="bike-sightings-table" class="table table-condensed table-hover table-striped">
  <thead>
    <tr>
      <th>Sighting ID</th>
      <th>Location</th>
      <th>Time</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @bike.sightings.each do |sighting| %>
      <tr>
        <td><%= link_to sighting.id, sighting %></td>
        <td><%= sighting.lat %>, <%= sighting.long %></td>
        <td><%= sighting.time %></td>
        <td><%= link_to 'Show', sighting %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<div class="alert alert-warning">
  <strong>Warning!</strong> No sightings found. Why not <%= link_to 'add one', new_sighting_path %>?
</div>
<% end %>

<%= link_to 'New Sighting', new_sighting_path %>
