<h1>Listing sightings</h1>

<table class="table table-condensed table-hover table-clickable">
  <thead>
    <tr>
      <th>#</th>
      <th>Lat</th>
      <th>Long</th>
      <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sightings.each do |sighting| %>
      <tr>
        <td><%= link_to sighting.id, sighting_path(sighting.id) %></td>
        <td><%= sighting.lat %></td>
        <td><%= sighting.long %></td>
        <td><%= sighting.time %></td>
        <td><%= link_to 'Show', sighting %></td>
        <td><%= link_to 'Edit', edit_sighting_path(sighting) %></td>
        <td><%= link_to 'Destroy', sighting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sighting', new_sighting_path %>
